{
  "name": "Workbench-Demo-Extension",
  "version": "0.2",
  "manifest_version": 3,
  "background": {
      "service_worker": "background.js"
  },
  "action": {
      "default_popup": "display.html",
      "default_icon": {
          "16": "/images/logo16.png",
          "32": "/images/logo32.png",
          "48": "/images/logo48.png",
          "128": "/images/logo128.png"
      }
  },
  "icons": {
    "16": "/images/logo16.png",
    "32": "/images/logo32.png",
    "48": "/images/logo48.png",
    "128": "/images/logo128.png"
  },
  "permissions": [
      "tabs", "scripting"
  ],
  "host_permissions": [
      "http://*.youtube.com/*", "https://*.youtube.com/*"
  ]
}